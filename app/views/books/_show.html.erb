<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Status:</strong>
  <%= @book.status %>
</p>

<% if @user %>
  <p>
    <strong>User:</strong>
    <%= @book.user.email %>
  </p>
<% end %>

<%= button_to 'Desreservar', unbook_path(@book), remote: true %>
<%= button_to 'Pay', pay_book_path(@book), class:"pay" %>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
